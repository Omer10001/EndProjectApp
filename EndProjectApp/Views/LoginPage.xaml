<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EndProjectApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Email:" />
            <Label Text="{Binding EmailError}" IsVisible="{Binding ShowEmailError}" Style="{StaticResource labelErrorStyle}"/>
            <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Email"   
                           Keyboard="Email"                            />
            <Label Text="Password:" Style="{StaticResource labelNameStyle}" />
            <Label   Text="{Binding PasswordError}" IsVisible="{Binding ShowPasswordError}" Style="{StaticResource labelErrorStyle}"/> 
            <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password"  IsPassword="True"                       />
            <Button Text="Login" Command="{Binding SubmitCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>