<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:EndProjectApp.Views"
            xmlns:fontAwsome="clr-namespace:FontAwesome"
            NavigationPage.HasBackButton="False"
            NavigationPage.HasNavigationBar="False"
             x:Class="EndProjectApp.Views.MainTabbedPage"
            xmlns:andorid="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            andorid:TabbedPage.ToolbarPlacement="Bottom">
    <local:MainPage   >
        <local:MainPage.IconImageSource>
            <FontImageSource FontFamily="FAS" Glyph="{x:Static fontAwsome:FontAwesomeIcons.House}"></FontImageSource>
        </local:MainPage.IconImageSource>
    </local:MainPage>
    <local:CreatePostPage>
        <local:CreatePostPage.IconImageSource>
            <FontImageSource FontFamily="FAS" Glyph="{x:Static fontAwsome:FontAwesomeIcons.Plus}"></FontImageSource>
        </local:CreatePostPage.IconImageSource>
    </local:CreatePostPage>
    <local:SearchPage>
        <local:SearchPage.IconImageSource>
            <FontImageSource FontFamily="FAS" Glyph="{x:Static fontAwsome:FontAwesomeIcons.MagnifyingGlass}"></FontImageSource>
        </local:SearchPage.IconImageSource>
    </local:SearchPage>


</TabbedPage>